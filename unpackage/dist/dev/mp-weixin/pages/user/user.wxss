view, text, textarea, input {
  box-sizing: border-box;
}
image {
  display: block;
  height: auto;
  background-size: 100% 100%;
}
input {
  background: none;
}
page {
  background: #F7F7F7;
}
.content {
  width: 100%;
  min-height: 100vh;
}
.content .footer {
  overflow: hidden;
  margin-top: 80rpx;
}
.content .footer > text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  opacity: 0.6;
  color: #333333;
}
.content .footer view {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}
.content .footer view image {
  width: 32rpx;
  margin-right: 8rpx;
}
.content .footer view text {
  font-size: 28rpx;
  opacity: 0.6;
  color: #333333;
}
.content .main_link {
  width: 702rpx;
  margin: 0 auto;
  position: relative;
  z-index: 9;
  margin-top: -55rpx;
}
.content .main_link .label {
  overflow: hidden;
  width: 100%;
  height: 130rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 38rpx 0 40rpx;
  margin-bottom: 16rpx;
}
.content .main_link .label .icon {
  display: flex;
  align-items: center;
}
.content .main_link .label .icon image {
  width: 40rpx;
  margin-right: 24rpx;
}
.content .main_link .label .icon text {
  font-size: 28rpx;
  color: #333333;
}
.content .main_link .label .right {
  display: flex;
  align-items: center;
}
.content .main_link .label .right image {
  width: 15rpx;
  margin-left: 13rpx;
}
.content .main_link .label .right text {
  font-size: 28rpx;
  color: #333333;
  opacity: 0.5;
}
.content .userbox {
  width: 100%;
  height: 300rpx;
  background-image: url("https://qietu.ahqian.com/xiaot/5.12/userbg.png");
  background-size: 100%;
  background-position: bottom center;
  padding: 60rpx 64rpx 0 64rpx;
}
.content .userbox .userinfo {
  display: flex;
  align-items: center;
}
.content .userbox .userinfo image {
  width: 107rpx;
  height: 107rpx;
  border-radius: 50%;
}
.content .userbox .userinfo view {
  margin-left: 30rpx;
}
.content .userbox .userinfo view .name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 19rpx;
  letter-spacing: 1rpx;
}
.content .userbox .userinfo view .des {
  display: block;
  font-size: 24rpx;
  opacity: 0.5;
  font-weight: 500;
  color: #fff;
  letter-spacing: 1rpx;
}

