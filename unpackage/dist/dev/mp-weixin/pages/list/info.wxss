view, text, textarea, input {
  box-sizing: border-box;
}
image {
  display: block;
  height: auto;
  background-size: 100% 100%;
}
input {
  background: none;
}
page {
  background: #F7F7F7;
}
.content {
  width: 100%;
  min-height: 100vh;
  padding-bottom: 40rpx;
}
.content .banner {
  width: 100%;
  height: 376rpx;
}
.content .banner image {
  width: 100%;
  height: 100%;
}
.content .button {
  width: 700rpx;
  height: 97rpx;
  background: #2765F2;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 37rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}
.content .main_info {
  overflow: hidden;
  background: #fff;
  margin-top: 14rpx;
  padding: 28rpx 30rpx;
}
.content .main_info view {
  display: flex;
  align-items: center;
}
.content .main_info view image {
  width: 5rpx;
}
.content .main_info view text {
  font-size: 26rpx;
  margin-left: 12rpx;
  color: #333333;
}
.content .main_info .font {
  display: block;
  font-size: 26rpx;
  margin-top: 30rpx;
  color: #333333;
  line-height: 40rpx;
  opacity: 0.8;
}
.content .list {
  overflow: hidden;
  background: #fff;
  padding-left: 29rpx;
  margin-top: 14rpx;
}
.content .list .label {
  height: 90rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-right: 25rpx;
  justify-content: space-between;
  border-bottom: 1px solid #F3F7F9;
}
.content .list .label > image {
  width: 13rpx;
}
.content .list .label .change {
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 41rpx;
}
.content .list .label .change view {
  height: 100%;
  width: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .list .label .change image {
  width: 32rpx;
}
.content .list .label .change input {
  width: 57rpx;
  height: 100%;
  font-size: 26rpx;
  color: #333333;
  text-align: center;
}
.content .list .label .icon {
  height: 100%;
  display: flex;
  align-items: center;
}
.content .list .label .icon .des {
  font-size: 26rpx;
  color: #333333;
  margin-left: 24rpx;
}
.content .list .label .icon .f {
  position: relative;
  display: flex;
  align-items: center;
}
.content .list .label .icon .f text {
  font-size: 26rpx;
  color: #2765F2;
  position: relative;
  z-index: 9;
}
.content .list .label .icon .f image {
  width: 24rpx;
  position: absolute;
  left: -5rpx;
  top: -8rpx;
}
.content .list .label:last-child {
  border: none;
}
.content .address {
  width: 100%;
  height: 90rpx;
  margin-top: 14rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}
.content .address .icon {
  display: flex;
  align-items: center;
}
.content .address .icon image {
  width: 24rpx;
  margin-right: 19rpx;
}
.content .address .icon text {
  font-size: 28rpx;
  color: #333333;
}
.content .address .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 131rpx;
  height: 50rpx;
  background: #E9EFFE;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #2765F2;
}
.content .info {
  overflow: hidden;
  padding: 24rpx;
  background: #fff;
}
.content .info .name {
  display: block;
  font-size: 32rpx;
  color: #333333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.content .info view {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  justify-content: space-between;
}
.content .info view .price {
  display: block;
  font-size: 28rpx;
  color: #E06400;
}
.content .info view .num {
  display: block;
  font-size: 24rpx;
  color: #333333;
  opacity: 0.5;
}

